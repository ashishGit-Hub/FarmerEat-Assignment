<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".screens.login.VerifyOTPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/be_vietnam_regular"
        android:text="@string/farmereat"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/be_vietnam_bold"
        android:text="@string/verify_otp"
        android:textColor="@color/primary_text"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/be_vietnam_medium"
            android:text="@string/remember_your_password"
            android:textColor="@color/light_text_30" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/be_vietnam_medium"
            android:text="@string/login"
            android:textColor="@color/primary" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/one"
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_text_bg"
            android:fontFamily="@font/be_vietnam_regular"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:textSize="14sp"
            tools:ignore="LabelFor" />


        <EditText
            android:id="@+id/two"
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_text_bg"
            android:fontFamily="@font/be_vietnam_regular"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:textSize="14sp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/three"
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_text_bg"
            android:fontFamily="@font/be_vietnam_regular"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:textSize="14sp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/four"
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/input_text_bg"
            android:fontFamily="@font/be_vietnam_regular"
            android:gravity="center"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:textSize="14sp"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/five"
            android:layout_width="58dp"
            android:layout_height="59dp"
            android:background="@drawable/input_text_bg"
            android:fontFamily="@font/be_vietnam_regular"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:lines="1"
            android:maxLength="1"
            android:textSize="14sp"
            tools:ignore="LabelFor" />


    </LinearLayout>


    <Button
        android:id="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/resent_otp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/be_vietnam_medium"
        android:text="@string/resend"
        android:textColor="@color/primary_text"
        android:textSize="14sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>